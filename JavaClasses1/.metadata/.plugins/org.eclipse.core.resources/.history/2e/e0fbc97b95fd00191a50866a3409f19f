package com.Class13;

public class StringReverse {

	public static void main(String[] args) {
//		 TODO Auto-generated method stub	
	String str="Sunday";
	
	for (int i=str.length()-1; i>=0; i--) {
		System.out.print(str.charAt(i));
			}

	String str2="Hello";
	int odd;
	if (!str2.isEmpty()) {
		if (str2.length()%2!=0) {
			odd=(str2.length()/2);
			System.out.println(charAt(odd));
		}
	}
	
	}

	
	}

}
