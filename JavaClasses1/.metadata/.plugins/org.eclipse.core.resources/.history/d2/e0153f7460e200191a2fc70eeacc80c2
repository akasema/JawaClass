package com.class3;

public class PrimitiveCasting {
	public static void main(String[]args ) {
		// FYI -for your ýnformatýon
		double d=12;  // output 12.0
		
		//int i=12.0  brings an error
		// Casting is converting one type to an other type of variable
		// widening(implicit (automaticly do) 
		// narrowing (explicit / manually do )
		//you can store the smallest into largest widening 
		//byte--> short --> int --> long --> float --> double 
		
		
		//widening automatic casting
		byte b=127;
		int i=b;
		int num=123;
		double d1=num;
		System.out.println(d1); // out put 12.0. kucuklerý buyuk ýcýne koyabýlýrsýn otomatýk olarak
		
		/*Narrowing (aexplicit /manual) 
		 * doublle--> foat--> long--> int --> short-->byte
		 */
		// narroving or explicit or manual castin, buyuklerý kucuk ýcýne koyarsan sacmalýk olur
		double d2=123.56;
		int num2=(int)d2; // output 123( noktadan sonrayý atýyor  format  (int)d2
		
		int num3=789;
		byte b1=(byte)num3;// bu -27 gibi bir rakam çýkartýr bun otomatik yapmaz sen (byte) yazmak zorundasýn
		
		
		/*OPERATORS
		 * Assignment = demek
		 * Aritmetic  + - / *  % 
		 * shorthand += -= *= /= 
		 * 
		 * Relational operators => <=
		 */
	
	
		
		
	}

}
