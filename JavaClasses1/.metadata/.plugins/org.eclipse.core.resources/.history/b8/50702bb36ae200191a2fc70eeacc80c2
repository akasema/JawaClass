package com.class3;

public class IffStatement {
	public static void main(String[]args ) {
		int temp=30;
		if (temp<32) {
			System.out.println("Water will freeze with Temperature"+ temp);
			
		}
		else {
		System.out.println("Water will NOT freeze with temperature" + temp);
		}
	
		// ýf num1==num2  ýf deký esýt ýse ýsaretý 
		
		boolean val=false;
		if(val) { // if val is true do this demek if val==true
			System.out.println("Hello");
		}else {
			System.out.println("Bye"); // bunun neticesi BYE
		}
		boolean isRain=false;
		
		if(isRain); { 
			System.out.println("Talke Your umbrella");
		}
		System.out.println("Take Your umbrella");
		}
		
		
	}


